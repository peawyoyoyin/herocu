h1 herocu
if user
  p logged in as #{user.username}
  br
  a(href="/repo/new") new repository
  br
  a(href="/logout") logout
  br
  if user.repos.length > 0
    p repositories
    ul
      each repo in user.repos
        li 
          a(href=`/repo/view/${repo.username}/${repo.repositoryName}`) #{repo.repositoryName}
          if repo.task
            a(href=`/repo/stop-task/${repo.username}/${repo.repositoryName}`) stop running ECS task
else
  a(href="/login") login
  br
  a(href="/newuser") create new user
